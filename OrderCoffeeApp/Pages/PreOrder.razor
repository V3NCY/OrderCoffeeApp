@page "/PreOrder"
@inject NavigationManager NavigationManager

<h1>Pre-Order Page</h1>
<ImageBox CoffeeChoice="@coffeeChoice" />

<h2 style="color: #FAFAD2;">Options:</h2>
<div class="options">
    <!-- Add additional options here -->
</div>
<button class="btn default outlined-button justify-items-center my-3" @onclick="() => NavigateToPreOrderPage(goBack)">Go back</button>

@code {
    [Parameter]
    public string Choice { get; set; }

    private string coffeeChoice;

    protected override void OnInitialized()
    {
        var uri = new Uri(NavigationManager.Uri);
        coffeeChoice = System.Web.HttpUtility.ParseQueryString(uri.Query).Get("choice");
    }

    private void SelectOption(string option)
    {

    }

    private string goBack;

    private void NavigateToPreOrderPage(string selectedChoice)
    {
        goBack = selectedChoice;
        NavigationManager.NavigateTo($"/");
    }
}
